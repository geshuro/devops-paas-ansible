{% if secrets_jenkins is defined %}
apiVersion: v1
kind: Secret
type: Opaque
metadata:
  name: {{ admin_user_credentials_secret }}
  namespace: {{ namespace_devops }}
data:
  jenkins-admin-password: {{ admin_user_password_value | b64encode }}
  jenkins-admin-user: {{ admin_user_user_value | b64encode }}

{% else %}
{% endif %}


{% if secrets_sonar is defined %}
apiVersion: v1
data:
  postgresql-password: {{ psql_pwd_value }}
kind: Secret
metadata:
  name: {{ postgresql_database_secret }}
  namespace: {{ namespace_devops }}
type: Opaque
{% else %}
{% endif %}


